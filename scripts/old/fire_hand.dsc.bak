firehit_hand_listener:
  type: world
  events:
    on player left clicks block with air:
    - if <context.relative.material.name> == fire:
      - if <util.random.int[1].to[100]> <= 80 && !<player.has_effect[fire_resistance]>:
        - burn <player> duration:5s
        - narrate "<&6>You have been burned trying to extinguish fire with your hand!"
        - determine cancelled